{
	"name"        : "emerham/blog",
	"description" : "An out-of-the-box composer-powered WordPress package inspired by Mark Jaquith's WordPress Skeleton",
	"type"        : "project",
	"license"     : "MIT",
	"repositories": [
		{
			"type": "composer",
			"url" : "https://wpackagist.org"
		}
	],
	"require"     : {
		"johnpbloch/wordpress": "~5.2",
		"timber/timber": "^1.14",
		"vlucas/phpdotenv": "^4.1",
		"wp-cli/wp-cli": "^2.4",
		"wpackagist-plugin/w3-total-cache": "^0.12.0",
		"composer/semver": "^1.5",
		"composer/composer": "^1.9",
		"wpackagist-plugin/json-feed": "^1.3"
	},
	"require-dev" : {
		"wpackagist-plugin/regenerate-thumbnails": "^3.1",
		"wpackagist-plugin/developer"            : "~1",
		"squizlabs/php_codesniffer": "^3.5",
		"wp-coding-standards/wpcs": "^2.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.6.0",
		"wpackagist-plugin/developer-toolbar": "^1.0",
		"symfony/var-dumper": "^4"
	},
	"extra"       : {
		"wordpress-install-dir": "public/wp",
		"installer-paths"      : {
			"public/content/plugins/{$name}"   : ["type:wordpress-plugin"],
			"public/content/mu-plugins/{$name}": ["type:wordpress-muplugin"],
			"public/content/themes/{$name}"    : ["type:wordpress-theme"]
		}
	}
}
